<Window x:Class="WpfApp5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="LightGray">
    <Grid x:Name="MainButtons">
        <!-- Стартовая кнопка -->
        <Button x:Name="StartButton" HorizontalAlignment="Center" Margin="0,370,0,0" VerticalAlignment="Top" 
                Height="50" Width="150" FontFamily="Times New Roman" FontSize="36" 
                Content="Start" Click="StartButton_Click"
                Background="LightGreen" Foreground="DarkGreen" BorderBrush="Green" BorderThickness="2" 
                Padding="10" FontWeight="Bold"/>

