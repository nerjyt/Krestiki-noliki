                Height="100" Width="100" FontFamily="Times New Roman" FontSize="50" IsEnabled="False" 
                Click="AllCenterButtons_Click" Background="LightBlue" BorderBrush="Blue" BorderThickness="2" 
                Foreground="DarkBlue">
            <Button.Effect>
                <DropShadowEffect Color="Gray" ShadowDepth="5" BlurRadius="10"/>
            </Button.Effect>
        </Button>
